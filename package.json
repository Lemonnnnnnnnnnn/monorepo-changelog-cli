{
  "name": "monorepo-changelog-cli",
  "version": "1.0.0",
  "description": "基于 git commit 记录生成 changelog 的 CLI 工具，主要服务于 pnpm monorepo 架构",
  "main": "dist/index.js",
  "bin": {
    "changelog-cli": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "changelog",
    "git",
    "monorepo",
    "pnpm",
    "cli",
    "version"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.0.0",
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "glob": "^10.0.0",
    "inquirer": "^8.2.5",
    "ora": "^7.0.0",
    "semver": "^7.5.0",
    "simple-git": "^3.19.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.0",
    "@types/jest": "^29.0.0",
    "@types/semver": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
